
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }
    
    function isProfileComplete(userId) {
      return get(/databases/$(database)/documents/users/$(userId)).data.profileComplete == true;
    }

    // USERS collection
    match /users/{userId} {
      // Anyone can read a user's profile
      allow read: if true;
      
      // Only the authenticated owner can create or update their own profile
      allow create, update: if isSignedIn() && isOwner(userId);
    }

    // SESSIONS collection
    match /sessions/{sessionId} {
      // A user can read a session if they are the mentee or the mentor
      allow read: if isSignedIn() && (resource.data.menteeId == request.auth.uid || resource.data.mentorId == request.auth.uid);

      // A mentee with a complete profile can create a session request
      allow create: if isSignedIn() && request.resource.data.menteeId == request.auth.uid && isProfileComplete(request.auth.uid);

      // A mentor can update a session (e.g., accept, add link).
      // A mentee or mentor can update to mark it complete.
      // A mentee can update to mark feedback as submitted.
      allow update: if isSignedIn() && 
                      (
                        // Mentor can accept/reject/add link
                        (resource.data.mentorId == request.auth.uid) ||
                        // Either party can mark as complete
                        (resource.data.menteeId == request.auth.uid || resource.data.mentorId == request.auth.uid)
                      );
    }

    // REVIEWS collection
    match /reviews/{reviewId} {
        // Anyone can read reviews
        allow read: if true;

        // A user can create a review if:
        // 1. They are the mentee of the session.
        // 2. The session is marked 'completed'.
        // 3. They are also updating the mentor's rating and the session's feedback status.
        allow create: if isSignedIn() &&
                       request.resource.data.menteeId == request.auth.uid &&
                       get(/databases/$(database)/documents/sessions/$(request.resource.data.sessionId)).data.status == 'completed' &&
                       // Check that the corresponding user and session docs are also being updated in the same transaction
                       getAfter(/databases/$(database)/documents/users/$(request.resource.data.mentorId)).data.reviewCount == get(/databases/$(database)/documents/users/$(request.resource.data.mentorId)).data.reviewCount + 1 &&
                       getAfter(/databases/$(database)/documents/sessions/$(request.resource.data.sessionId)).data.feedbackSubmitted == true;
    }
  }
}
