rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /users/{userId} {
      // Allow any authenticated user to read the list of users for the discover page.
      allow list, get: if request.auth != null;
      // Allow users to create their own profile and update/delete it.
      allow create, update, delete: if request.auth != null && request.auth.uid == userId;
    }
  }
}
