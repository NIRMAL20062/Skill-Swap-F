
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }
    
    match /users/{userId} {
      allow read: if isSignedIn();
      allow create: if isOwner(userId);
      // Allow updates to profile info by owner, and allow anyone to update rating/review info
      allow update: if isOwner(userId);
    }

    match /sessions/{sessionId} {
      allow read: if isSignedIn() && 
                   (resource.data.menteeId == request.auth.uid || resource.data.mentorId == request.auth.uid);

      allow create: if isSignedIn() && request.resource.data.menteeId == request.auth.uid;
      
      // Allow mentee to mark feedback as submitted
      // Allow mentor to accept/reject or add meeting link
      // Allow either to mark session as complete
      allow update: if isSignedIn() && 
                     (resource.data.menteeId == request.auth.uid || resource.data.mentorId == request.auth.uid);
    }

    match /reviews/{reviewId} {
      allow read: if isSignedIn();
      
      // Allow create if the user is the mentee of the session being reviewed
      allow create: if isSignedIn() &&
                     get(/databases/$(database)/documents/sessions/$(request.resource.data.sessionId)).data.menteeId == request.auth.uid;
    }
  }
}
