
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Users can read anyone's profile, but only write to their own.
    match /users/{userId} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // A user can read a session if they are the mentee or mentor.
    // Writes are more restricted.
    match /sessions/{sessionId} {
      allow read: if request.auth != null && (resource.data.menteeId == request.auth.uid || resource.data.mentorId == request.auth.uid);
      
      // Allow session creation by any authenticated user.
      allow create: if request.auth != null;

      // Allow updates (accept, reject, add link, mark complete) by participants.
      allow update: if request.auth != null && (resource.data.menteeId == request.auth.uid || resource.data.mentorId == request.auth.uid);
    }
    
    // Users can read reviews for any mentor.
    // Review creation is handled by server-side logic (actions), not direct client writes.
    match /reviews/{reviewId} {
      allow read: if true;
      allow write: if false; // Disallow direct client writes for security.
    }
  }
}
