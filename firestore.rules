
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Users can read anyone's profile, but only write to their own.
    // User profiles are public information in this app.
    match /users/{userId} {
      allow read: if request.auth != null;
      allow create: if request.auth.uid == userId;
      allow update: if request.auth.uid == userId;
    }
    
    // Users can create sessions where they are the mentee.
    // Users can read and update sessions where they are the mentee or mentor.
    match /sessions/{sessionId} {
      allow read, update: if request.auth != null && (resource.data.menteeId == request.auth.uid || resource.data.mentorId == request.auth.uid);
      allow create: if request.auth != null && request.resource.data.menteeId == request.auth.uid;
    }

    // Reviews can be read by any authenticated user.
    // The creation of reviews is handled by the secure Cloud Function.
    match /reviews/{reviewId} {
      allow read: if request.auth != null;
      allow create: if false; // Creation is handled by the Cloud Function
    }
  }
}

    