rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Users can read and write their own profile
    // Users can read other users' profiles (for discovery)
    match /users/{userId} {
      allow read: if true;
      allow write: if request.auth.uid == userId;
    }
    
    // Logged-in users can read sessions where they are the mentee or mentor
    match /sessions/{sessionId} {
      allow read: if request.auth != null && (request.auth.uid == resource.data.menteeId || request.auth.uid == resource.data.mentorId);
      // Writes are now handled by the Cloud Function, but allow creating new requests
      // and simple status updates by involved parties.
      allow create: if request.auth.uid == request.resource.data.menteeId;
      allow update: if request.auth != null && (request.auth.uid == resource.data.menteeId || request.auth.uid == resource.data.mentorId);
    }
    
    // Only logged-in users who were the mentee can read their review
    // Creation is handled by the Cloud Function
    match /reviews/{reviewId} {
      allow read: if request.auth.uid == resource.data.menteeId;
      allow create: if false; // Block direct creation
      allow update: if false; // Block updates
      allow delete: if false; // Block deletes
    }
  }
}
